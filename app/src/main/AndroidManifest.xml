<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cesoft.organizate2">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- android:roundIcon="@mipmap/ic_launcher_round" -->
    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.list.ListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.item.ItemActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ui.alert.date.AlertDateActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_notif_date"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.alert.geo.AlertGeoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_notif_geo"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.alert.date.EditDateActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_edit_date"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>